<div class="row">
  <div class='col-md-4'>
    <div class="row col-md-8 col-md-offset-2" id="chatroom-title">
      <h1>Chatrooms</h1>
    </div>

    <div class="" id="chatrooms">
      <%= render partial: 'chatroom_form', locals: {chatroom: @chatroom} %>
      <div id="chatroom-errors">
        
      </div>
        <ul id="chatroom-index" class="chat"> 
      <% if @chatrooms.any? %>
          <%= render @chatrooms%>
      <%else %>
        </ul>
        <p>Be the first one to make a chatroom!</p>
      <% end %>
    </div>
  </div>
  <div class="col-md-8">
    <div id="chat-box">
  </div>
</div>